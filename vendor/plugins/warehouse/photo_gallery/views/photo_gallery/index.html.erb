<% if @photos.any? %>
<table id="browser" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th>File name</th>
      <th>Location</th>
    </tr>
  </thead>
  <% @photos.each do |photo| -%>
  <tr>
    <% paths = photo.path.split('/') -%>
    <td class="item">
      <%= link_to h(paths.last), browser_path(:paths => paths), :class => 'image' %>
    </td>
    <td><span class="log"><% paths.pop %> <%= paths.join('/') %></span></td>
  </tr>
  <% end -%>
</table>
<%= will_paginate @photos %>
<% else %>
  <p>There are no images in your repository.</p>
<% end %>