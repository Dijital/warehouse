<%= error_messages_for :user %>
<ul id="users">
  <li class="user" id="user-<%= current_user.id %>">
    <%=h(current_user.name.blank? ? current_user.identity_url : current_user.name) %>
    <% unless current_user.name.blank? -%>
    <span class="log"><%=h current_user.identity_url %></span>
    <% end -%>
  </li>
  <li class="user useredit" id="user-edit-<%= current_user.id %>">
    <% form_for :user, current_user, :html => { :multipart => true, :method => :put } do |f| -%>
      <%= render :partial => "form", :object => f %>
      <p class="btns">
        <%= submit_tag 'Save', :disable_with => 'Saving...' %>
      </p>
    <% end -%>
  </li>
</ul>