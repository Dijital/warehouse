<h2>Repositories</h2>
<ul id="repos">
<% @repos.each do |repo| %>
  <li class="repo" id="repo-<%= repo.id %>">
    <%=h repo.name %>
    <span class="log"><%= repo.path %></span>
    <ul class="admin-controls">
      <li class="edit"><%= link_to_function('Edit', %($('repo-edit-#{repo.id}').toggle())) %></li>
      <li class="del"><a href="#" title="Delete">Delete</a></li>
    </ul>
  </li>
  <li class="repo repoedit" id="repo-edit-<%= repo.id %>" style="display:none">
    <% form_for :repository, repo do |f| %>
      <p>
        <label for="repository_name">Name:</label>
        <%= f.text_field :name %>
      </p>
      <p>
        <label for="repository_path">Path:</label>
        <%= f.text_field :path %>
      </p>
      <p style="border-bottom:0">
        <label for="repository_subdomain">Subdomain:</label>
        <%= f.text_field :subdomain %>
      </p>
      <p class="btns">
        <%= submit_tag 'Save', :disable_with => 'Saving...' %>
      </p>
    <% end %>
  </li>
<% end %>
</ul>