<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title>Warehouse</title>
    <%= stylesheet_link_tag 'main' %>
  </head>
  <body>
    <!-- container -->
    <div id="container">
      <!-- header -->
      <div id="header">
        <div id="hdr-cnt">
          <h1><%= link_to 'Warehouse', root_path %></h1>
          <div>
            <%= link_to 'Browse', browser_path %> |
            <%= link_to 'Latest', changesets_path %> |
            <% if logged_in? -%>
            <%= link_to 'Logout', logout_path %>
            <% else -%>
            <%= link_to 'Login', new_session_path %>
            <% end -%>
          </div>
        </div>
      </div>
      <!-- /header -->
      <!-- content -->
      <div id="content">
        <!-- main -->
        <div id="main"<% if @fullscreen %> style="width:100%"<% end %>>
          <%= yield %>
          <% if logged_in? -%><p><small>Logged in as <%=h current_user.identity_url %><%= ' Admin!' if admin? %></small></p><% end -%>
        </div>
        <!-- /main -->
        <% unless @fullscreen %>
        <!-- sbar -->
        <div id="sbar">
          <div id="bookmarks">
            <ul>
              <li>
                <h4><a href="#" title="">Attachment Fu</a></h4>
                <span class="active">Last active 5 days ago</span>
              </li>
              <li>
                <h4><a href="#" title="">Attachment Fu</a></h4>
                <span class="active">Last active 5 days ago</span>
              </li>
            </ul>
          </div>
        </div>
        <!-- /sbar -->
        <% end %>
      </div>
      <!-- /content -->
    </div>
    <!-- /container -->
    
  </body>
</html>