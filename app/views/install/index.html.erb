<div id="installer">
  <h1 id="splash">Install Warehouse</h1>
  <div class="overlay-content">
  <h2>Lets get started</h2>
  <div class="overlay-form oform">
  <%= error_messages_for :repository %>
  <% form_for @repository, :url => install_path do |f| -%>
    <p>
      <label for="domain">Domain name you're installing on <span class="help">(do not include subdomain)</span></label>
      <%= text_field_tag :domain, (params[:domain] || repository_domain), :size => 40 %>
    </p>
    <p>
      <label for="license">Your license #</label>
      <%= text_field_tag :license, params[:license], :size => 40 %>
    </p>
    <p>
      <label for="repository_name">Repository Name</label>
      <%= f.text_field :name, :size => 40 %>
    </p>
    <p>
      <label for="repository_path">Repository location (path)</label>
      <%= f.text_field :path, :size => 40 %>
    </p>
    </div>
    <p class="btns">
      <%= submit_image 'install.png' %>
    </p>
    </div>
  <% end -%>
  </div>
</div>